# https://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.{kt,kts,gradle,lml}]
indent_size = 2
max_line_length = 200
# noinspection EditorConfigKeyCorrectness
ktlint_standard_no-wildcard-imports = disabled

[*.md]
trim_trailing_whitespace = false
